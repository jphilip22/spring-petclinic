pipeline {
    agent  any
    triggers { poll SCM('*/2 * * * *')}
    stages{
       stage('clonig code') {
          steps {
            git branch: 'main', url: 'https://github.com/jphilip22/spring-petclinic.git'
        }
          }
        stage('building code and generating arifact'){
           steps{
             sh 'mvn package'
        } 
          }     
        
        stage('junit test'){
          steps{
            junit stdioRetention: '', testResults: 'target/surefire-reports/*.xml'
           }
       } 
    }
}   

   

